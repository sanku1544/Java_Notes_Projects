package com.tka.Billing;

import java.util.Scanner;

public class Billing {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter purchase Amt: ");
		double totalPurchaseAmount= sc.nextDouble();
		
		System.out.println("Enter Customer type: \nN for Normal\n M for Member\n P for Premium : \n");
		char type= sc.next().charAt(0);
		
		double finalBill;
		double discount;
		switch(type) {
		case 'N':
		break;
		case 'M':if(totalPurchaseAmount>=2000) {
			discount=0.20;
		double	discountAmt=totalPurchaseAmount*discount;
			System.out.println(totalPurchaseAmount+" Dicount 20% amt: "+discountAmt);
			finalBill=totalPurchaseAmount-discountAmt;
		}else {
			discount=totalPurchaseAmount%2;
			System.out.println(totalPurchaseAmount+" Dicount 2% amt: "+discount);
			finalBill=totalPurchaseAmount-discount;
		}
		break;
		case 'P':if(totalPurchaseAmount>=5000) {
			discount=totalPurchaseAmount%12;
			System.out.println(totalPurchaseAmount+" Dicount 12% amt: "+discount);
			finalBill=totalPurchaseAmount-discount;
		}else if(totalPurchaseAmount>=3000){
			discount=totalPurchaseAmount%8;
			System.out.println(totalPurchaseAmount+" Dicount 8% amt: "+discount);
			finalBill=totalPurchaseAmount-discount;
		}else {
			discount=totalPurchaseAmount%4;
			System.out.println(totalPurchaseAmount+" Dicount 4% amt: "+discount);
			finalBill=totalPurchaseAmount-discount;
		};
		break;
		default:System.out.println("Enter proper details");
		
		System.out.println("Enter visit of this month: ");
		int visitCount=sc.nextInt();
		
		System.out.println("Enter month code: ");
		int monthCode=sc.nextInt();
		
		
		}

	}

}
