package com.tks.Nov29Session;

import java.util.Scanner;

public class Practice {
   void sum(int a, int b) {
	  int res=a+b;
	  System.out.println("Ans is: "+res);
  }
  void sale(int costPrice, int sallingPrice) {
	  int res=costPrice-sallingPrice;
	  if(costPrice>sallingPrice) {
		  
		  System.out.println("Profit amount: "+res);
	  }else {
		  
		  System.out.println("Loss amount: "+res);
	  }
  }
  void avrage(int a,int b, int c) {
	  int res=a+b+c/3;
	  System.out.println("Avarage is: "+res);
  }
  void operations(int a, int b) {
	  int add=a+b;
	  System.out.println("Addition is: "+add);
	  int sub=a-b;
	  System.out.println("Subtraction is: "+sub);
	  int mul=a*b;
	  System.out.println("Multiplication is: "+mul);
	  int div=a/b;
	  System.out.println("Division is: "+div);
  }
  void table(int n) {
	  
	  for(int i=1;i<=10;i++) {
		  int t=n*i;
	  System.out.println(n+" * "+i+" = "+t);
	  }
  }
  void cube(int n) {
	  int cube=n*n*n;
	  System.out.println("Cube of "+n+" = "+cube);
  }
  void swap(int a, int b) {
	  System.out.println("Value of a before swapping: "+a);
	  System.out.println("Value of b before swapping: "+b);
	  int c=a;
	  a=b;
	  b=c;
	  System.out.println("\nValue of a after swapping: "+a);
	  System.out.println("Value of b after swapping: "+b);
  }
  void ascii(char s) {
	  int c=(int)+s;
	  System.out.println(c);
  }
  void gen() {
	  int a=1;
	  for(int i=1;i<=5;i++) {
		  System.out.println(a);
		 a *=10;
	  }
  }
  void odd() {
	  int a=40;
	  for(int i=1;i<=10;i +=2) {
		  System.out.println(i);
	  }
  }
  void increment() {
	  int a=0;
	  for(int i=0;i<=10;i++) {
		  System.out.println(a);
		  a +=i;
	  }
  }
	  void accept() {
		  Scanner sc=new Scanner(System.in);
			int pos=0;
			int zero=0;
			int neg=0;
			for(int i=1;i<=10;i++) {
				System.out.println("Enter "+i+" no: ");
				int a=sc.nextInt();
				if(a>0) {
					pos++;
				}
				else if(a<0) {
					neg++;
				}else {
					zero++;
				}
			}
			System.out.println("Positive no.s: "+pos);
			System.out.println("Negative no.s: "+neg);
			System.out.println("Zero no.s: "+zero);
  }
	  void largeSmall() {
		  Scanner sc=new Scanner(System.in);
		  int large=0;
		  int small=0;
		  for(int i=1;i<=5;i++) {
				System.out.println("Enter "+i+" no: ");
				int a=sc.nextInt();
				
				if(large<a) {
					large=a;
				}
				if(small>a) {
					small=a;
				}
			}
		  System.out.println(large);
		  System.out.println(small);
	  }
}
